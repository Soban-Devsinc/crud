<%= link_to 'Home', '/' %>
<%= link_to 'Back', '/projects' %>

<h1><%='Edit project' %></h1>

<% if flash[:errors].present? %>
  <div id="error_explanation">
    <h2><%= pluralize(flash[:errors].count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @project do |p| %>

Title: <%= p.text_field :title %> <br> <br>
Description: <%= p.text_field :description %> <br> <br>
Users Already:
  <% @users.each do |user|%>
    | <%= user.name%>
  <% end %>
<br><br>


Users:
<% available_users = User.all - @users %>
<%= p.collection_select :user_id, available_users, :id, :name, prompt: true %> <br><br>

<%= p.submit %>
<% end %>


