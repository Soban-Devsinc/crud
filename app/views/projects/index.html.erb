
<%= link_to 'Home', '/' %>

<h1>Welcome to Project Manager</h1>

<table border>
<tr>
  <th> ID </th>
  <th> Title </th>
  <th> Description </th>
    <th> Actions </th>
</tr>

  <% @projects.each do |project| %>
</tr>
    <td> <%= project.id %> </td>
    <td> <%= link_to project.title, project_path(project) %> </td>
    <td> <%= project.description %> </td>

    <td>
      <%= link_to 'Edit',  edit_project_path(project)%>
      <%= button_to 'Delete',  project_path(project), method: "delete" %>
    </td>

</tr>
  <% end %>
</table>

<%= link_to 'Add a new Project', new_project_path %>

